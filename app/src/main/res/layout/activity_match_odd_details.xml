<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/l_grey"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context="com.inception.betappuser.fragments.MatchOddDetails">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@color/white">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/match_odd_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Match Odds"
                        android:textColor="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/open_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/match_odd_heading"
                        android:layout_marginTop="4dp"
                        android:background="@color/colorAccent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="OPEN"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/l_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Selection"
                        android:textColor="@color/black"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Back"
                        android:gravity="center"
                        android:text="Back"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Lay"
                        android:gravity="center"
                        android:text="Lay"
                        android:textColor="@color/white" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/l_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:id="@+id/team_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team 1"
                            android:textColor="@color/black"
                            android:layout_alignParentLeft="true"
                            android:textSize="14sp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/result_team1"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:textSize="13sp"
                            android:id="@+id/result_team1"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            />

                    </RelativeLayout>





                    <TextView
                        android:id="@+id/back_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Back"
                        android:gravity="center"
                        android:text="Loading.."
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/lay_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Lay"
                        android:gravity="center"
                        android:text="Loading.."
                        android:textColor="@color/white" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/l_grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2">
                        <TextView
                            android:id="@+id/team_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Team 2"
                            android:textColor="@color/black"
                            android:layout_alignParentLeft="true"

                            android:layout_toLeftOf="@+id/result_team2"
                            android:textSize="14sp"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="5dp"
                            android:textSize="13sp"
                            android:id="@+id/result_team2"
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"

                            />

                    </RelativeLayout>



                    <TextView
                        android:id="@+id/back_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Back"
                        android:gravity="center"
                        android:text="Loading.."
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/lay_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/Lay"
                        android:gravity="center"
                        android:text="Loading.."
                        android:textColor="@color/white" />


                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="@color/white">

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:padding="5dp"

            android:layout_marginTop="6dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Session Runs"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/session_name"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.75"

                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="No"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.75"

                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text="Yes"
                    />


            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler"
            android:background="@color/l_grey"
            android:layout_marginTop="4dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/alphawhite"
            android:layout_marginTop="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placed Bets"
                android:background="@drawable/rounded_stroke"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:textColor="@color/d_grey"/>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:id="@+id/placed_bets"></android.support.v7.widget.RecyclerView>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

